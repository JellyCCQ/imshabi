/* pages/userCenter/userCenter.wxss */
.all{
  position: fixed;
  width: 100%;
  height: 100%;
  background: whitesmoke;
}
.user{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 250rpx;
  background-color:#FF6347;
}
.userinfo {
  position: fixed;
  left: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-money{
  position: fixed;
  right: 200rpx;
  top:90rpx;
  display: flex;
  flex-direction: column;
}
.money{
  font-size: 32rpx;
  color: white;
  margin-bottom: 20rpx;
}
.getmoney{
  font-size: 32rpx;
  color: cyan;
}
.userLogin-btn{
  font-display: center;
  height: 60rpx;
  width: 200rpx;
  font-size: 32rpx;
  border-radius: 30rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;

}

.userinfo-nickname {
  color:white;
}

.usermotto {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  width: 750rpx;
  height: 100rpx;
  background: white;
}
.img{
  height: 60rpx;
  width: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.img_go{
  height: 60rpx;
  width: 60rpx;
  position: fixed;
  right: 50rpx;
}
.user-motto{
  font-size: 32rpx;
}
.blank{
  margin-top: 50rpx;
}